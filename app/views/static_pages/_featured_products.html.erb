<div class="well well-small row">
  <h4>Sản phẩm nổi bật
    <small class="pull-right"><%= Product.count - 10 %>+ <%= t "fratured_products.title_fratured" %></small>
  </h4>
  <div class="row-fluid">
  <div id="featured" class="carousel slide">
  <div class="carousel-inner">
    <div class="item active">
    <div class="thumbnails">
      <% @products_fratured.each do |product| %>
        <div class="col-md-3">
          <div class="thumbnail">
          <i class="tag"></i>
          <%= link_to image_tag(product.images.first.image ,alt: ""), "#" %>
          <div class="caption">
            <h5><%= t "fratured_products.title_product" %></h5>
            <h4>
              <a class="btn" href="<%= product_path product.id %>">
                <%= t "fratured_products.btn_view" %>
              </a>
              <span class="pull-right">
                <%= number_to_currency(product.export_price, unit: "$", precision: 0, format: "%u %n") %>
              </span>
            </h4>
          </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>
    </div>
    <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#featured" data-slide="next">›</a>
    </div>
    </div>
</div>
