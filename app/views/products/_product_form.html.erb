<%= form_with model: @product do |f| %>
  
  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :import_price, t("import_price") %>
    <%= f.number_field :import_price, class: 'form-control' %>
  </div>

  <div class="form-group">  
    <%= f.label :export_price, t("export_price") %>
    <%= f.number_field :export_price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :describe, t("describe") %>
    <%= f.text_field :describe, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :note, t("note") %>
    <%= f.text_field :note , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :status, t("status") %>
    <%= f.select :status, options_for_select([["Avaiable", 1], ["Sold out", 0]]), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image, t("image") %>
    <% if !@product.new_record? %>
      <%= image_tag(@product.images.first.image, size: 100) %>
    <% else %>
      <%= f.file_field :image, class: 'form-control-file' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :time_guaranate, t("time_guaranate") %>
    <%= f.text_field :time_guaranate, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :sale, t("sale") %>
    <%= f.number_field :sale , class: 'form-control'%>
  </div>

  <div class="form-group pull-right">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>