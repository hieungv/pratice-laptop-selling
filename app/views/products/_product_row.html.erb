<% @products.each do |product| %>
  <div class="col-md-4">
    <div class="thumbnail">
    <%= link_to image_tag(product.images.first.image, alt: "register.html", class: 'product-thumnail'), product %>
    <div class="caption">
      <h5 data-id="<%= product.id %>"><%= product.name %></h5>
      <p>
      <%= product.describe %>
      </p>
      <h4 style="text-align:center">
        <a class="btn" href="product_details.html"><i class="icon-zoom-in"></i></a>
        <%= button_to "Add to cart", line_items_path(product_id: product), class: "btn btn-primary", remote: true %>
        <a class="btn btn-primary" href="#"><%= product.export_price %></a>
      </h4>
    </div>
    </div>
  </div>
<% end %>
