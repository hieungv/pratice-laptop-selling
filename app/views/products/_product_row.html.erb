<% @products.each do |product| %>
  <li class="span3">
    <div class="thumbnail">
    <%= link_to image_tag("products/6.jpg", alt: "register.html"), product %>
    <div class="caption">
      <h5 data-id="<%= product.id %>"><%= product.name %></h5>
      <p>
      <%= product.describe %>
      </p>
      <h4 style="text-align:center">
        <a class="btn" href="product_details.html"><i class="icon-zoom-in"></i></a>
        <%= button_to  line_items_path(:product_id => product), class: "btn" do %>
        <i class="icon-shopping-cart"></i>
        <% end %>
        <a class="btn btn-primary" href="#"><%= product.export_price %></a>
      </h4>
    </div>
    </div>
  </li>
<% end %>
