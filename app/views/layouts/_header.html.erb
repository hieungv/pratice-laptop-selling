<div id="header">
<div class="container">
<div id="welcomeLine" class="row">
  <div class="col-md-6"></div>
  <div class="col-md-6">
  <div class="pull-right cart-info-header">
    <%= render 'layouts/cart_info_header' %>
  </div>
  </div>
</div>
<!-- Navbar ================================================== -->
<div id="logoArea" class="navbar">
<a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
</a>
  <div class="navbar-inner">
    <%= link_to "Hà shop", root_path , id: "brand", class: "navbar-brand faded", method: :get %>
    <%= render "products/search" %>
    <ul id="topMenu" class="nav pull-right">
      <% if logged_in? %>
        <% if session[:admin] %>
          <li><%= link_to "Admin", admin_path %></li>
          <li class="">
            <%= link_to t("contact"), new_feedback_path %>
          </li>
          <li class="">
            <%= link_to t("check_order"), check_order_admin_path %>
          </li>
          <li><%= link_to "Create Order", checkorder_path %></li>
          <li><%= link_to "Profile", "#" %></li>
          <li><%= link_to "Log out", logout_path, method: :delete %></li>
        <% else %>
          <li class="">
            <%= link_to t("contact"), new_feedback_path %>
          </li>
          <li class="">
            <%= link_to t("check_order"), checkorder_path %>
          </li>
          <li><%= link_to "Profile", "#" %></li>
          <li><%= link_to "Log out", logout_path, method: :delete %></li>
        <% end %>
      <% else %>
        <li class="">
          <%= link_to t("contact"), new_feedback_path %>
        </li>
        <li class="">
          <%= link_to t("check_order"), checkorder_path %>
        </li>
        <li><%= link_to "signup.html" do %><%= t "signup" %><% end %></li>
        <li class="">
        <li><%= link_to "Login", login_path %></li>
        <div id="login" class="modal hide fade in" tabindex="-1" role="dialog"
          aria-labelledby="login" aria-hidden="false" >
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
              aria-hidden="true">×</button>
            <h3><%= t "title_login" %></h3>
          </div>
          <%= render "layouts/login" %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
</div>
