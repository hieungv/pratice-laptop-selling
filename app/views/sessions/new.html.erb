<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 offset-md-4" style="padding: 50px;">
      <% if flash[:danger] %>
        <div class="alert alert-danger"><%= flash[:danger] %></div>
      <% end %>
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "control-group" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "control-group" %>
        <br>
        <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t".remember_me" %></span>
          <% end %>
        <br/>
        <%= f.submit t("btn_sign_in"), class: "btn btn-success" %>
        <%= f.submit t("btn_lose"), class: "btn", data: {dismiss: "modal"}, aria: {hidden: "true"} %>
      <% end %>
    </div>
  </div>
</div>